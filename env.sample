# Package Repository Upload Configuration
# Copy this file to .env and customize the values

# Repository credentials
REPO_USERNAME=your_username
REPO_PASSWORD=your_password_or_token

# Repository URLs
REPO_BASE_URL=https://gitea.example.com/api/packages
REPO_OWNER=your_organization_or_username

# RPM repository endpoint
RPM_UPLOAD_URL=${REPO_BASE_URL}/${REPO_OWNER}/rpm/upload

# DEB repository endpoint  
DEB_UPLOAD_URL=${REPO_BASE_URL}/${REPO_OWNER}/debian/upload

# Optional: Upload timeout in seconds (default: 300)
UPLOAD_TIMEOUT=300

# Optional: Enable verbose curl output (true/false)
UPLOAD_VERBOSE=false 